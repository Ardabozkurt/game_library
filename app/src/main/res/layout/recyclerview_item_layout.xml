<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerview_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        app:cardBackgroundColor="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardviewconstraitlayout"
            android:layout_width="375dp"
            android:layout_height="136dp">

            <ImageView
                android:id="@+id/gameImage"
                android:layout_width="120dp"
                android:layout_height="104dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@drawable/gta_5" />

            <TextView
                android:id="@+id/gameName"
                android:layout_width="207dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:letterSpacing="0.02"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/gameImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="207dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="108dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="top"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="2sp"
                android:text="TextView"
                android:textColor="#8A8A8F"
                android:textSize="13sp"
                android:translationY="-1.24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toEndOf="@+id/gameImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/metacritic"
                android:layout_width="77dp"
                android:layout_height="17dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.03"
                android:text="metaciritic:"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/genre"
                app:layout_constraintStart_toEndOf="@+id/gameImage" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="right|center_vertical"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="4sp"
                android:text="TextView"
                android:textColor="#D80000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/genre"
                app:layout_constraintStart_toEndOf="@+id/metacritic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>